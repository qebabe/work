.meta {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 16px;
    color: #b8b8b8;
}
.meta .author {
    color: #444;
}

.meta .bio {
    color: #999;
}
.meta span {
    vertical-align: middle;
}

.nav {
background:#ffffff;
padding:10px 0 6px 0;
width:100%;
position:fixed;
left:-2px;
bottom:0;
height:65rpx;
color:#ffffff;

}
.nav ul {
    height: 0px;
}
.nav ul li {
    float: left;
    width: 250rpx;
    text-align: center;
    list-style-type: none;
    margin: 0px;
    padding: 0px;
}
.nav ul li button::after{
    width: 0px;


}
.nav ul li span {
    display: block;
    color: #fff;
    font-size: 14px;
    font-family: "微软雅黑";
    line-height: 22px;
}
