}

.art-title{
    /*position: absolute;*/
    bottom: 36px;
    left: 8px;
    font-size: 20px;
    color:#000000;
    margin-bottom:10rpx;
    font-weight:bold;
}

.art-source {
    position: absolute;
    bottom: 8px;
    font-size: 14px;
