/* pages/yanma_yundong/yanma_yundong.wxss */
.page.js_show {
    opacity: 1;
}

.page {
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    opacity: 0;
    z-index: 1;
}


.page, body {
    background-color: #f8f8f8;
}
.weui-cells__title + .weui-cells {
    margin-top: 0;
}
.weui-cells {
    margin-top: 1.17647059em;
    background-color: #FFFFFF;
    line-height: 1.47058824;
    font-size: 17px;
    overflow: hidden;
    position: relative;
}
.weui-cells:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #e5e5e5;
    color: #e5e5e5;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    z-index: 2;
}
.weui-cell {
    padding: 10px 15px;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.weui-cells__title {
    margin-top: .77em;
    margin-bottom: .3em;
    padding-left: 15px;
    padding-right: 15px;
    color: #999999;
    font-size: 14px;
}

.weui-cell__bdd{
  -webkit-flex:0.1;
  font-size:20px;
  overflow:visible;
}
.weui-cell__bdd text{
  width:50rpx;
 display:block;

}


.weui-cell__ft_step {
  color:rgb(12,149,61);
  font-size:49rpx;
}
.weui-cell__ft_step1 {
  color:rgb(233,151,58);
  font-size:49rpx;
}
.weui-cell__ft_step2 {
  color:#999999;
  font-size:49rpx;
}
.zan {
  width:20px;
  height:20px;
  display:block;
}
.zan-text{
  color:gray;
}
.weui-cell__hd{
  text-align:center;
  margin-left:13px;

}
